<div class="container">
<article id ="detail">

  <h2><%= @restaurant.name %></h2>
    <% if current_user %>
      <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_restaurant_path(@restaurant.id), class: "btn btn-primary" %>
        <%= link_to "投稿を削除", restaurant_path(@restaurant.id), method: :delete, data: { confirm: "一度削除すると元には戻せません。本当に削除してもいいですか？"}, class: "btn btn-danger pull-right" %>
      <% end %>
    <% end %>

  <div class="content">
    <div class="container">
    <div class="col-md-8">
    <p class="picture_content"><%= attachment_image_tag @restaurant, :restaurant_image, size: "600x600" %></p>
  </div>
  </div>
    <p>
      <strong>説明文：</strong>
      <%= @restaurant.description %>
    </p>

    <p>
      <strong>投稿者：</strong>
      <%= link_to user_path(@user) do %>
      <%= @user.name %>
      <% end %>
      <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg", class:"img-circle" %>
    </p>

    <!-- いいね機能 -->
    <div id="show_favorite_<%= @restaurant.id %>">
      <%= render 'favorites/favorite', restaurant: @restaurant %>
    </div>

    <p>
      <strong>住所：</strong>
      <%= @restaurant.address %>
    </p>

    <div id="map">
    </div>

    <style>
    #map{
      width: 100%;
      height: 400px;
    }
    </style>

    <script>
    //Map表示
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setCenter(new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>)); //初期位置設定
        handler.getMap().setZoom(15); //拡大率設定
      });
    </script>

    <!-- コメント機能 -->
    <p><strong>コメント：</strong></p>
    <div id="comments_area">
      <div class="">
          <ul>
            <li id="comments_area">
              <%= render partial: 'post_comments/index', locals: { post_comments: @comments } %>
            </li>
          </ul>
          <hr>
          <% if user_signed_in? %>
              <div class="comment-create">
                  <h5 class="text-left">コメントを投稿する</h5>
                  <%= render partial: 'post_comments/form', locals: { post_comment: @comment, restaurant: @restaurant } %>
              </div>
          <% end %>
      </div>
    </div>
  </div>
</article>
</div>